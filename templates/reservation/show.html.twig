{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1 class="titre-index">Reservation</h1>
    <button class="grey-button"><a href="{{ path('app_reservation_index') }}">back to list</a></button>
    <div class="flexbox">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.nom }}</td>
            </tr>
            <tr>
                <th>Tarif_unit</th>
                <td>{{ reservation.tarifUnit }}</td>
            </tr>
            <tr>
                <th>Date_arrive</th>
                <td>{{ reservation.dateArrive ? reservation.dateArrive|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_depart</th>
                <td>{{ reservation.dateDepart ? reservation.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ reservation.total }}</td>
            </tr>
            <tr>
                <th>Paiement</th>
                <td>{{ reservation.paiement ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
