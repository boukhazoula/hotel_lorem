{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
    <h1>Chambre</h1>
        <button class="grey-button"><a href="{{ path('app_chambre_index') }}">back to list</a></button>
    <div class="flex-box">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ chambre.tarif }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ chambre.titre }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ chambre.numero }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ chambre.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/' ~ chambre.image ) }}" alt=""></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ chambre.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="flex-box special">
    <button class="warning-button-lg"><a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a></button>

    {{ include('chambre/_delete_form.html.twig') }}
    </div>
    </div>

{% endblock %}
