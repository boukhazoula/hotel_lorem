{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Index des catégories</h1>
        <button class="button-login"><a href="{{ path('app_category_new') }}">Create new</a></button>
    <div class="flex-box">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <button class="button-login-lg"><a href="{{ path('app_category_show', {'id': category.id}) }}">Voir</a></button>
                    <button class="warning-button-lg"><a href="{{ path('app_category_edit', {'id': category.id}) }}">éditer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
